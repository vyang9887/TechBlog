<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://unpkg.com/flowbite@1.5.3/dist/flowbite.min.css"
    />
    <title>Tech Blog</title>
  </head>
  <body class="bg-gray-400">

    <nav class="bg-yellow-800 py-2.5">
      <div
        class="flex flex-wrap justify-between items-center mx-auto max-w-screen-xl">
        <a href="/" class="flex items-center">
          <h1
            class="mb-4 mr-6 text-3xl font-extrabold lg:text-6xl">The Tech Blog</h1>

        </a>
        <div
          class="justify-between items-center w-full lg:flex lg:w-auto lg:order-1">
          <ul
            class="flex flex-col mt-4 font-medium lg:flex-row lg:space-x-8">
            <li>
              <a href="/" aria-current="page">Home</a>
            </li>
            <li>
              <a href="/dashboard">Dashboard</a>
            </li>
          </ul>
        </div>

        <div class="flex items-right lg:order-2">
          {{#if logged_in}}
            <button
              type="button"
              id="logout"
              class="text-white hover:bg-gray-400 hover:text-black font-medium rounded-lg text-sm px-4 lg:px-5 py-2 lg:py-2.5 mr-2 bg-blue-400 dark:hover:bg-gray-700"
            >Logout</button>
          {{else}}
            <a
              href="/login"
              class="text-white hover:bg-gray-400 hover:text-black font-medium rounded-lg text-sm px-4 lg:px-5 py-2 lg:py-2.5 mr-2 bg-blue-400 dark:hover:bg-gray-700"
            >Log in</a>
          {{/if}}        
      </div>
    </nav>

    <main>
      {{{body}}}
    </main>

    <!-- If the user is logged in, load the JS script for when they logout -->
    {{#if logged_in}}
      <script src="../js/logout.js"></script>
    {{/if}}
  </body>
  <script src="https://unpkg.com/flowbite@1.5.3/dist/flowbite.js"></script>
  <script src="https://cdn.tailwindcss.com"></script>

</html>